\ EVALUATE                   STM8 eForth string evaluation 
\ refer to github.com/TG9541/stm8ef/blob/master/LICENSE.md

#require BUFFER
#require TIB
#require >IN
#require #TIB
#require 'EVAL
#require TOKEN
#require [COMPILE]

: EVALUATE ( a u -- results )
  >IN @ >R   #TIB @ >R
  #TIB !      0 >IN !
  BUFFER !
  'EVAL @ >R [COMPILE] [
  BEGIN
    TOKEN 
    DUP C@ WHILE 
    [ $92CD , 'EVAL C, ] 
  REPEAT
  DROP
  R> 'EVAL !
  TIB BUFFER !
  R> #TIB ! R> >IN !
;

\\ Example

\ Test STM8 eForth String Evaluate feature
\ Note: EVALUATE can be used in an 'IDLE task but it's not allowed in a Background Task
#require S"
#require EVALUATE

: test S" 2 7 +" ;
test EVALUATE . 9 ok
